{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "rules": {
        "no-extra-semi": "off",
        "react/no-unescaped-entities": "off"
    },
    "globals": {
        "test": "readonly",
        "expect": "readonly",
        "React": "writable",
        "module": "readonly",
        "require": "readonly"
    }
}
